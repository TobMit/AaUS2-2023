<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ListViewItem" x:Key="ObjectTheme">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <TreeViewItem Header="{Binding Popis}">
                        <TreeViewItem Header="Supisne cislo">
                            <TreeViewItem Header="{Binding IdObjektu}"/>
                        </TreeViewItem>
                        <TreeViewItem Header="GPS - Juhozapadný bod">
                            <TreeViewItem Header="{Binding JuhoZapadnyBod.X }"/>
                            <TreeViewItem Header="{Binding JuhoZapadnyBod.Y }"/>
                        </TreeViewItem>
                        <TreeViewItem Header="GPS - Severovýchodný bod">
                            <TreeViewItem Header="{Binding SeveroVychodnyBod.X }"/>
                            <TreeViewItem Header="{Binding SeveroVychodnyBod.Y }"/>
                        </TreeViewItem>
                        <TreeViewItem Header="Parcely na ktorych sa nachadza">
                            <ListView
                                ItemsSource="{Binding ZoznamObjektov}"
                                ItemContainerStyle="{StaticResource ObjectTheme}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                BorderThickness="0"/>
                        </TreeViewItem>
                    </TreeViewItem>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding ObjectType}" Value="Parcela">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewItem">
                            <TreeViewItem Header="{Binding Popis}">
                                <TreeViewItem Header="CisloParcely">
                                    <TreeViewItem Header="{Binding IdObjektu}"/>
                                </TreeViewItem>
                                <TreeViewItem Header="GPS - Juhozapadný bod">
                                    <TreeViewItem Header="{Binding JuhoZapadnyBod.X }"/>
                                    <TreeViewItem Header="{Binding JuhoZapadnyBod.Y }"/>
                                </TreeViewItem>
                                <TreeViewItem Header="GPS - Severovýchodný bod">
                                    <TreeViewItem Header="{Binding SeveroVychodnyBod.X }"/>
                                    <TreeViewItem Header="{Binding SeveroVychodnyBod.Y }"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Nehnutelnosti ktoré sa tam nachádzajú">
                                    <ListView
                                        ItemsSource="{Binding ZoznamObjektov}"
                                        ItemContainerStyle="{StaticResource ObjectTheme}"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        BorderThickness="0"/>
                                </TreeViewItem>
                            </TreeViewItem>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>